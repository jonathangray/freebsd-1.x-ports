!
! This file lists up the X resources that XPilot understands and their
! default values.
!
xpilot*name:                            <login name>        #nick name
xpilot*power:                           45.0                #use 5.0-55.0
xpilot*turnSpeed:                       30.0                #use 8.0-64.0
xpilot*turnResistance:                  0.12                #use 0.1-0.9
xpilot*altPower:                        35.0
xpilot*altTurnSpeed:                    25.0
xpilot*altTurnResistance:               0.12
xpilot*team:                            0                   #0=no team (1-9)
xpilot*fuelNotify:                      500.0               #HUDfuel on
xpilot*fuelWarning:                     200.0               #HUDfuel flash
xpilot*fuelCritical:                    100.0               #HUDfuel flash fast
xpilot*showHUD:                         true                #HUD on/off
xpilot*verticalHUDLine:                 false
xpilot*horizontalHUDLine:               true
xpilot*fuelMeter:                       false
xpilot*fuelGauge:                       false
xpilot*turnSpeedMeter:                  false
xpilot*powerMeter:                      false

!
! These are the default keybindings, they are tailormade for HP keyboards, but
! with some SUN functionality thrown in:
!
xpilot*keyLockNext:		Right Next
xpilot*keyLockPrev:		Left Prior
xpilot*keyLockClose:		Up Down Select
xpilot*keyChangeHome:		Home
xpilot*keyShield:		Meta_R space
xpilot*keyFireShot:		Return
xpilot*keyFireMissile:		backslash Linefeed
xpilot*keyDropMine:		Tab
xpilot*keyTurnLeft:		a
xpilot*keyTurnRight:		s
xpilot*keySelfDestruct:		q
xpilot*keyIdMode:		i
xpilot*keyPause:		p
xpilot*keyToggleVelocity:	v
xpilot*keyToggleCompass:	c
xpilot*keySwapSettings:		Escape
xpilot*keyRefuel:		f Control_L Control_R Caps_Lock
xpilot*keyIncreasePower:	KP_Multiply
xpilot*keyDecreasePower:	KP_Divide
xpilot*keyIncreaseTurnspeed:	KP_Add
xpilot*keyDecreaseTurnspeed:	KP_Subtract
xpilot*keyThrust:		Shift_L Shift_R
xpilot*keyCloak:		BackSpace
xpilot*keySlowdown:		bracketleft braceleft
xpilot*keySpeedup:		bracketright braceright
